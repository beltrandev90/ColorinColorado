<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/style_bordes2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/salmon"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="Editar Alumno" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_bordes_edittext"
            android:ems="10"
            android:hint="Nombre"
            android:textSize="13dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editApellido"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style_bordes_edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:ems="10"
            android:textSize="13dp"
            android:hint="Apellidos"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editNomPadre"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style_bordes_edittext"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:textSize="13dp"
            android:hint="Email padre/tutor"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTelefono"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/style_bordes_edittext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:ems="10"
            android:textSize="13dp"
            android:hint="TelÃ©fono"
            android:inputType="textPersonName" />

    </LinearLayout>

    <TextView
        android:id="@+id/textRadiosButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="Selecciona"
        android:textColor="@color/salmon"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:entries="@array/clases" />

        <TextView
            android:id="@+id/textSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Aceptar" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>